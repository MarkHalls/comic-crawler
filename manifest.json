{
  "manifest_version": 2,
  "name": "Comic Crawler",
  "version": "1",

  "description": "A simple webcomic downloader.",
  "icons": {
    "16": "icon.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "index.html",
    "default_title": "Comic Crawler"
  },
  "app": {
    "background": {
      "scripts": ["index.js"]
    }
  },

  "author": "Mark Halls",
  "incognito": "split",
  "permissions": ["tabs", "downloads"]
}
