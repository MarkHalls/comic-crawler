{
  "manifest_version": 2,
  "name": "Comic Crawler",
  "version": "1",

  "description": "A simple webcomic downloader.",
  "icons": {
    "16": "icon.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "index.html",
    "default_title": "Comic Crawler"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["index.js", "crawler.js"]
    }
  ],
  "content_security_policy": "script-src https://www.schlockmercenary.com 'self'; object-src 'self'",
  "author": "Mark Halls",
  "incognito": "split",
  "permissions": ["tabs", "downloads"]
}
